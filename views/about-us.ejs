<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body>
    <%-include("./partials/nav.ejs") %>

    <!-- Hero Section -->
    <section class="about-hero">
      <div class="container">
        <div class="row min-vh-100 align-items-center">
          <div class="col-lg-6">
            <h1 class="display-4 fw-bold mb-4">Our Story</h1>
            <p class="lead mb-4">
              Welcome to Glam n Glow Salon, where beauty meets excellence. Our
              journey began with a simple vision: to create a sanctuary where
              everyone can experience the transformative power of beauty and
              self-care.
            </p>
            <div class="d-flex gap-3">
              <div class="achievement-item">
                <h3 class="fw-bold">10+</h3>
                <p class="text-muted">Years of Excellence</p>
              </div>
              <div class="achievement-item">
                <h3 class="fw-bold">50k+</h3>
                <p class="text-muted">Happy Clients</p>
              </div>
              <div class="achievement-item">
                <h3 class="fw-bold">20+</h3>
                <p class="text-muted">Expert Stylists</p>
              </div>
            </div>
          </div>
          <div class="col-lg-6">
            <img
              src="https://images.unsplash.com/photo-1560066984-138dadb4c035"
              alt="Salon Interior"
              class="img-fluid rounded-3 shadow-lg"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Our Values Section -->
    <section class="values-section py-5">
      <div class="container">
        <h2 class="text-center mb-5">Our Core Values</h2>
        <div class="row g-4">
          <div class="col-md-4">
            <div class="value-card">
              <div class="value-icon">
                <i class="fas fa-heart"></i>
              </div>
              <h3>Passion</h3>
              <p>
                We are passionate about beauty and dedicated to bringing out the
                best in every client.
              </p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="value-card">
              <div class="value-icon">
                <i class="fas fa-star"></i>
              </div>
              <h3>Excellence</h3>
              <p>
                We strive for excellence in every service, ensuring the highest
                quality experience.
              </p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="value-card">
              <div class="value-icon">
                <i class="fas fa-handshake"></i>
              </div>
              <h3>Integrity</h3>
              <p>
                We maintain the highest standards of professionalism and ethical
                practices.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="team-section py-5">
      <div class="container">
        <h2 class="text-center mb-5">Meet Our Team</h2>
        <div class="row g-4">
          <div class="col-md-4">
            <div class="team-card">
              <img
                src="https://images.unsplash.com/photo-1580618672591-eb180b1a973f"
                alt="Team Member"
                class="team-img"
              />
              <div class="team-info">
                <h3>Sarah Ahmed</h3>
                <p class="text-muted">Master Stylist</p>
                <div class="social-links">
                  <a href="#"><i class="fab fa-instagram"></i></a>
                  <a href="#"><i class="fab fa-facebook"></i></a>
                  <a href="#"><i class="fab fa-twitter"></i></a>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="team-card">
              <img
                src="/images/dodi.jpg"
                alt="Team Member"
                class="team-img"
              />
              <div class="team-info">
                <h3>Shereif Younes</h3>
                <p class="text-muted">Color Specialist</p>
                <div class="social-links">
                  <a href="#"><i class="fab fa-instagram"></i></a>
                  <a href="#"><i class="fab fa-facebook"></i></a>
                  <a href="#"><i class="fab fa-twitter"></i></a>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="team-card">
              <img
                src="/images/mm.jpg"
                alt="Team Member"
                class="team-img"
              />
              <div class="team-info">
                <h3>Lina Brown</h3>
                <p class="text-muted">Makeup Artist</p>
                <div class="social-links">
                  <a href="#"><i class="fab fa-instagram"></i></a>
                  <a href="#"><i class="fab fa-facebook"></i></a>
                  <a href="#"><i class="fab fa-twitter"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="why-us-section py-5">
      <div class="container">
        <h2 class="text-center mb-5">Why Choose Us</h2>
        <div class="row g-4">
          <div class="col-md-6 col-lg-3">
            <div class="feature-card">
              <i class="fas fa-certificate"></i>
              <h4>Expert Team</h4>
              <p>Highly trained and experienced professionals</p>
            </div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="feature-card">
              <i class="fas fa-spa"></i>
              <h4>Premium Products</h4>
              <p>Only the finest quality products used</p>
            </div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="feature-card">
              <i class="fas fa-clock"></i>
              <h4>Convenient Hours</h4>
              <p>Flexible scheduling to suit your needs</p>
            </div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="feature-card">
              <i class="fas fa-gem"></i>
              <h4>Luxury Experience</h4>
              <p>Premium service in a relaxing environment</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section py-5">
      <div class="container">
        <div class="cta-content text-center">
          <h2 class="mb-4">Experience the Luxe Difference</h2>
          <p class="lead mb-4">
            Join us for an unforgettable beauty experience
          </p>
          <button type="button" class="btn btn-custom" data-bs-toggle="modal" data-bs-target="#calendarModal">Book Your Appointment</button>
        </div>
      </div>
    </section>

    <%-include("./partials/footer.ejs") %>
    <!-- Custom JS -->
    <script>
      // Navbar scroll effect
      window.addEventListener("scroll", function () {
        const navbar = document.querySelector(".navbar");
        if (window.scrollY > 50) {
          navbar.classList.add("scrolled");
        } else {
          navbar.classList.remove("scrolled");
        }
      });
    </script>

    <!-- Add the modal at the end of the file if not present -->
    <div class="modal fade" id="calendarModal" tabindex="-1" aria-labelledby="calendarModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="calendarModalLabel">Book Your Appointment</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body text-center">
            <label for="appointmentDate" class="form-label mb-2">Select a date:</label>
            <input type="date" id="appointmentDate" class="form-control mb-3" style="max-width: 250px; margin: 0 auto;">
            <button class="btn btn-custom" onclick="alert('Appointment booked for ' + document.getElementById('appointmentDate').value)">Confirm</button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
