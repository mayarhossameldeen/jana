<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>

  <body>
    <%- include('partials/nav') %>

    <!-- Hero Section -->
    <section class="hero-section fade-up">
      <div class="container">
        <div class="row align-items-center min-vh-100">
          <div class="col-lg-6">
            <h1 class="display-3 fw-bold mb-4">Discover Your Beauty</h1>
            <p class="lead mb-4">
              Experience luxury beauty treatments in a serene environment. Our
              expert stylists are dedicated to bringing out your natural beauty.
            </p>
            <div class="d-flex gap-3">
              <a href="/book" class="btn btn-custom btn-lg">Book Now</a>
              <a href="/services" class="btn btn-outline-custom btn-lg">Our Services</a>
            </div>
          </div>
          <div class="col-lg-6 text-center">
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="services-section py-5">
      <div class="container">
        <h2 class="text-center mb-5">Our Services</h2>
        <div class="row g-4">
          <div class="col-md-4">
            <div class="service-card">
              <img src="/images/hair.jpeg" class="card-img-top" alt="Makeup Services">
              <h3>Hair Styling</h3>
              <p>
                From cuts to coloring, our expert stylists will transform your
                look.
              </p>
              <a href="/services#hair" class="btn btn-link">Learn More</a>
            </div>
          </div>
          <div class="col-md-4">
            <div class="service-card">
              <img src="/images/body.jpg" class="card-img-top" alt="Makeup Services">
              <h3>Body care</h3>
              <p>Rejuvenate your skin with our premium facial treatments.</p>
              <a href="/services#facial" class="btn btn-link">Learn More</a>
            </div>
          </div>
          <div class="col-md-4">
            <div class="service-card">
              <img src="/images/nailsss.jpg" class="card-img-top" alt="Makeup Services">
              <h3>Nail Care</h3>
              <p>
                Professional manicures and pedicures for beautiful hands and
                feet.
              </p>
              <a href="/services#nails" class="btn btn-link">Learn More</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section class="about-section py-5 bg-light">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-6">
            <h2 class="mb-4">About Luxe Beauty</h2>
            <p class="lead mb-4">
              Welcome to Luxe Beauty Salon, where luxury meets expertise. We've
              been serving our community with premium beauty services for over a
              decade.
            </p>
            <p class="mb-4">
              Our team of certified professionals is dedicated to providing you
              with the highest quality beauty treatments in a relaxing and
              welcoming environment.
            </p>
            <a href="/about-us" class="btn btn-custom">Learn More About Us</a>
          </div>
          <div class="col-lg-6">
            <div class="about-image">
              <img
                src="/images/old.jpg"
                alt="Luxe Beauty Salon Interior"
                class="img-fluid rounded"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials-section py-5">
      <div class="container">
        <h2 class="text-center mb-5">What Our Clients Say</h2>
        <div class="row">
          <div class="col-md-4">
            <div class="testimonial-card">
              <div class="testimonial-content">
                <p>
                  "The best salon experience I've ever had! The staff is
                  professional and the results are amazing."
                </p>
              </div>
              <div class="testimonial-author">
            
                <div>
                  <h5>Sarah Johnson</h5>
                  <p>Regular Client</p>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="testimonial-card">
              <div class="testimonial-content">
                <p>
                  "I love how they always make me feel special. The attention to
                  detail is incredible."
                </p>
              </div>
              <div class="testimonial-author">
            
                <div>
                  <h5>Emily Davis</h5>
                  <p>VIP Member</p>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="testimonial-card">
              <div class="testimonial-content">
                <p>
                  "The atmosphere is so relaxing, and the results are always
                  perfect. Highly recommended!"
                </p>
              </div>
              <div class="testimonial-author">
           
                <div>
                  <h5>Jana Tarek</h5>
                  <p>New Client</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Gallery Section -->
    <section class="gallery-section py-5 bg-light">
      <div class="container">
        <h2 class="text-center mb-5">Our Work</h2>
        <div class="row g-3">
          <div class="col-md-4">
            <div class="gallery-item">
              <img
                src="/images/hair look.jpg"
                alt="Hair Styling"
                class="img-fluid rounded"
              />
            </div>
          </div>
          <div class="col-md-4">
            <div class="gallery-item">
              <img
                src="/images/m look.jpg"
                alt="Facial Treatment"
                class="img-fluid rounded"
              />
            </div>
          </div>
          <div class="col-md-4">
            <div class="gallery-item">
              <img
                src="/images/n look.jpg"
                alt="Nail Art"
                class="img-fluid rounded"
              />
            </div>
          </div>
        </div>
        <div class="text-center mt-4">
        </div>
      </div>
    </section>

    <!-- Special Offers Section -->
    <section class="offers-section py-5 fade-up">
      <div class="container">
        <h2 class="text-center mb-5">Special Offers</h2>
        <div class="row g-4">
          <div class="col-md-4">
            <div class="offer-card">
              <div class="offer-badge">New Client</div>
              <h3>First Visit Special</h3>
              <p class="offer-price">20% OFF</p>
              <p>On your first visit to our salon</p>
              <a href="/services" class="btn btn-custom">Book Now</a>
            </div>
          </div>
          <div class="col-md-4">
            <div class="offer-card featured">
              <div class="offer-badge">Popular</div>
              <h3>Beauty Package</h3>
              <p class="offer-price">99 EGP</p>
              <p>Haircut + Facial + Manicure</p>
              <a href="/services" class="btn btn-custom">Book Now</a>
            </div>
          </div>
          <div class="col-md-4">
            <div class="offer-card">
              <div class="offer-badge">Limited Time</div>
              <h3>Weekday Special</h3>
              <p class="offer-price">15% OFF</p>
              <p>On all services Monday-Thursday</p>
              <a href="/services" class="btn btn-custom">Book Now</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="team-section py-5 bg-light fade-up">
      <div class="container">
        <h2 class="text-center mb-5">Meet Our Experts</h2>
        <div class="row g-4">
          <div class="col-md-4">
            <div class="team-card">
              <div class="team-image">
                <img
                  src="/images/Master.jpg"
                  alt="Team Member"
                  class="img-fluid rounded-circle"
                />
              </div>
              <div class="team-info">
                <h4>Mayar Hossam</h4>
                <p class="team-role">Master Stylist</p>
                <p class="team-bio">
                  10+ years of experience in hair styling and coloring
                </p>
               
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="team-card">
              <div class="team-image">
                <img
                  src="/images/s master.jpg"
                  alt="Team Member"
                  class="img-fluid rounded-circle"
                />
              </div>
              <div class="team-info">
                <h4>Jana Tarek</h4>
                <p class="team-role">Skin Care Specialist</p>
                <p class="team-bio">
                  Certified in advanced facial treatments and skin care
                </p>
              
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="team-card">
              <div class="team-image">
                <img
                  src="/images/n master.jpg"
                  alt="Team Member"
                  class="img-fluid rounded-circle"
                />
              </div>
              <div class="team-info">
                <h4>shahd Ahmed</h4>
                <p class="team-role">Nail Artist</p>
                <p class="team-bio">
                  Specialist in nail art and advanced nail treatments
                </p>
                  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Newsletter Section -->
    <section class="newsletter-section py-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <div class="newsletter-card">
              <h2 class="text-center mb-4">Stay Updated</h2>
              <p class="text-center mb-4">
                Subscribe to our newsletter for exclusive offers and beauty tips
              </p>
              <form class="newsletter-form">
                <div class="input-group mb-3">
                  <input
                    type="email"
                    class="form-control"
                    placeholder="Enter your email"
                    required
                  />
                  <button class="btn btn-custom" type="submit">
                    Subscribe
                  </button>
                </div>
                <div class="form-check text-center">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="privacyCheck"
                    required
                  />
                  <label class="form-check-label" for="privacyCheck">
                    I agree to receive marketing emails
                  </label>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section py-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8 text-center">
            <h2 class="mb-4">Ready to Transform Your Look?</h2>
            <p class="lead mb-4">
              Book your appointment today and experience the luxury you deserve.
            </p>
            <button type="button" class="btn btn-custom btn-lg" data-bs-toggle="modal" data-bs-target="#calendarModal">
              Book Your Appointment
            </button>
          </div>
        </div>
      </div>
    </section>


    <!-- Appointment Modal -->
    <div class="modal fade" id="calendarModal" tabindex="-1" aria-labelledby="calendarModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="calendarModalLabel">Book Your Appointment</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body text-center">
            <label for="appointmentDate" class="form-label mb-2">Select a date:</label>
            <input type="date" id="appointmentDate" class="form-control mb-3" style="max-width: 250px; margin: 0 auto;">
            <button class="btn btn-custom" onclick="alert('Appointment booked for ' + document.getElementById('appointmentDate').value)">Confirm</button>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/footer') %>

    <style>
      /* Existing styles */
      .hero-section {
        background: url("/images/background2.jpg")
          center/cover no-repeat;
        position: relative;
        padding: 120px 0;
        margin-bottom: 50px;
      }
      .card-img-top {
     width: 100%;
     height: 250px;         
  object-fit: cover;     
  border-top-left-radius: 0.375rem;
  border-top-right-radius: 0.375rem;
  margin-bottom: 0;      
} 
      /* Special Offers Styles */
      .offer-card {
        background: white;
        border-radius: 15px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        position: relative;
        transition: transform 0.3s ease;
      }
      .offer-card:hover {
        transform: translateY(-10px);
      }
      .offer-card.featured {
        background: linear-gradient(
          135deg,
          var(--cream) 0%,
          var(--lavender) 100%
        );
      }
      .offer-badge {
        position: absolute;
        top: -10px;
        right: 20px;
        background: var(--primary-pink);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
      }
      .offer-price {
        font-size: 2.5rem;
        font-weight: bold;
        color: var(--primary-pink);
        margin: 20px 0;
      }

      /* Team Styles */
      .team-card {
        background: white;
        border-radius: 15px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
      }
      .team-card:hover {
        transform: translateY(-10px);
      }
      .team-image {
        width: 150px;
        height: 150px;
        margin: 0 auto 20px;
        overflow: hidden;
      }
      .team-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .team-role {
        color: var(--primary-pink);
        font-weight: 500;
        margin-bottom: 10px;
      }
      .team-social {
        margin-top: 20px;
      }
      .team-social a {
        color: var(--text-color);
        margin: 0 10px;
        font-size: 1.2rem;
        transition: color 0.3s ease;
      }
      .team-social a:hover {
        color: var(--primary-pink);
      }

      /* Newsletter Styles */
      .newsletter-card {
        background: white;
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      }
      .newsletter-form .form-control {
        border-radius: 25px 0 0 25px;
        padding: 12px 20px;
        border: 2px solid var(--light-gray);
      }
      .newsletter-form .btn {
        border-radius: 0 25px 25px 0;
        padding: 12px 30px;
      }
      .btn-link{
        background: linear-gradient(
          45deg,
          var(--primary-pink),
          var(--rose-gold)
        );
        border: none;
        color: white;
        padding: 10px 25px;
        border-radius: 25px;
        transition: all 0.3s ease;
      }
      .btn-link:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 105, 180, 0.3);
        color: white;
      }
      .form-check-input:checked {
        background-color: var(--primary-pink);
        border-color: var(--primary-pink);
      }
    </style>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        function revealOnScroll() {
          document.querySelectorAll('.fade-up').forEach(function (el) {
            const rect = el.getBoundingClientRect();
            if (rect.top < window.innerHeight - 50) {
              el.style.opacity = 1;
              el.style.animationPlayState = 'running';
            }
          });
        }
        window.addEventListener('scroll', revealOnScroll);
        revealOnScroll();
      });
    </script>
  </body>
</html>
